{% extends 'NSAdminBundle:Section:settings.html.twig' %}

{% block content_header %}
    <h3>Каталоги</h3>
{% endblock %}

{% block content_content %}
    <a href="{{ url('ns_admin_bundle', { adminBundle: 'NSCatalogBundle', adminController: 'catalogs', adminAction: 'form'}) }}" class="btn">Добавить каталог</a>

    {% if catalogs %}
        <table class="table table-striped table-hover">
            <thead>
            <tr>
                <th style="width:200px">Название</th>
                <th>Имя (лат.)</th>
                <th style="width:100px">Операции</th>
            </tr>
            </thead>
            <tbody>
            {% for catalog in catalogs %}
                <tr>
                    <td>{{ catalog.title }}</td>
                    <td>{{ catalog.name }}</td>
                    <td>
                        <div class="btn-group">
                            <a href="{{ url('ns_admin_bundle', { adminBundle: 'NSCatalogBundle', adminController: 'catalogs', adminAction: 'form'}) }}?id={{ catalog.id }}" class="btn btn-mini"><i class="icon-pencil"></i></a>
                            <a href="{{ url('ns_admin_bundle', { adminBundle: 'NSCatalogBundle', adminController: 'catalogs', adminAction: 'delete'}) }}?id={{ catalog.id }}" class="btn btn-mini ns-confirm"><i class="icon-trash"></i></a>
                        </div>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% endif %}
{% endblock %}