{% extends 'NSAdminBundle::layout.html.twig' %}

{% block content %}
	<h3>Типы данных</h3>

	<div class="row">
		<div class="span3">
			{{ knp_menu_render('main', { template: 'NSAdminBundle:Generic:left-menu.html.twig' }, 'twig') }}
		</div>
		<div class="span9">
			<a href="{{ url('ns_admin_bundle', { adminBundle: 'NSCatalogBundle', adminController: 'SettingsType', adminAction: 'form'}) }}" class="btn">Добавить тип данных</a>

			{% if types %}
				<table class="table table-striped table-hover">
					<thead>
					<tr>
						<th style="width:200px">Название</th>
						<th style="width:200px">Теги</th>
						<th>&nbsp;</th>
						<th style="width:100px">Операции</th>
					</tr>
					</thead>
					<tbody>
					{% for type in types %}
						<tr>
							<td>{{ type.title }}</td>
							<td>{{ type.tagsArray|join(', ') }}</td>
							<td>
								<div class="btn-group">
									<a href="{{ url('ns_admin_bundle', { adminBundle: 'NSCatalogBundle', adminController: 'settingsType', adminAction: 'form'}) }}?id={{ type.id }}" class="btn btn-mini"><i class="icon-pencil"></i></a>
									<a href="{{ url('ns_admin_bundle', { adminBundle: 'NSCatalogBundle', adminController: 'settingsType', adminAction: 'delete'}) }}?id={{ type.id }}" class="btn btn-mini"><i class="icon-trash"></i></a>
								</div>
							</td>
						</tr>
					{% endfor %}
					</tbody>
				</table>
			{% endif %}
		</div>
	</div>
{% endblock %}